# Portfolio Analytics API — example environment config
# Copy to .env and adjust. Do not commit .env.

# Database (TimescaleDB / PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5433/portfolio

# Redis (cache for portfolio history)
REDIS_URL=redis://127.0.0.1:6379/0
HISTORY_CACHE_TTL_SECONDS=300

# Kafka
KAFKA_BOOTSTRAP_SERVERS=127.0.0.1:9092
KAFKA_PORTFOLIO_TOPIC=portfolio.events

# Ollama (local LLM)
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_DEFAULT_MODEL=llama2

# Hugging Face summarisation model
HF_SUMMARISATION_MODEL=sshleifer/distilbart-cnn-12-6

# Object storage (MinIO / S3)
S3_ENDPOINT=http://127.0.0.1:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=datalake

# Spark / Delta Lake
SPARK_MASTER=local[*]
SPARK_DELTA_WAREHOUSE=s3a://datalake/warehouse
DELTA_SAMPLE_PATH=s3a://datalake/curated/sample

# ClickHouse
CLICKHOUSE_HOST=127.0.0.1
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Stream (Faust) – optional write to MinIO
STREAM_WRITE_TO_MINIO=0
STREAM_QUOTES_BATCH_SIZE=20

# MLflow
MLFLOW_TRACKING_URI=http://127.0.0.1:5001
