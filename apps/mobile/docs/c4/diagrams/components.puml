    Component(use_per_symbol_history, "usePerSymbolHistory", "TypeScript Hook", "Per-symbol history data")
}

Rel(stocks_screen, use_realtime_quotes, "Uses", "")
Rel(stocks_screen, use_per_symbol_history, "Uses", "")
