!include ../lib/C4_Component.puml

title Mobile Portfolio App - Component Diagram

Container_Boundary(rn_app, "React Native App") {
    Component(stocks_screen, "Stocks Screen", "React Native", "Stock list with NativeSparkline")
    Component(accounts_screen, "Accounts Screen", "React Native", "Account overview")
    Component(insights_screen, "Insights Screen", "React Native", "Portfolio insights")
    Component(profile_screen, "Profile Screen", "React Native", "User profile")
    Component(portfolio_store, "Portfolio Store", "Zustand", "Global portfolio state")
