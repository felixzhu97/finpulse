@startuml
!include ../lib/C4_Container.puml

title Mobile Portfolio App - Container Diagram

System_Boundary(mobile_portfolio, "Mobile Portfolio App") {
    Container(rn_app, "React Native App", "Expo + RN", "Stocks, accounts, insights, profile screens")
    Container(portfolio_service, "Portfolio Service", "TypeScript", "Portfolio API client")
    Container(quote_socket, "Quote Socket", "TypeScript", "WebSocket real-time quotes")
}

Container_Ext(portfolio_api, "Portfolio Analytics API", "FastAPI", "REST and WebSocket backend")

Rel(rn_app, portfolio_service, "Calls", "")
Rel(rn_app, quote_socket, "Uses", "")
Rel(portfolio_service, portfolio_api, "HTTP", "REST")
Rel(quote_socket, portfolio_api, "WebSocket", "/ws/quotes")
@enduml
