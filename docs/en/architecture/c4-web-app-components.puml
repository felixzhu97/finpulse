@startuml c4-web-app-components
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

title Web App - Component Diagram

Container_Boundary(web_app, "Web App (Angular 21)") {
    Component(app_router, "App Router", "Angular Router", "Dashboard, Portfolio, Transactions, Reports, Clients")
    Component(dashboard, "Dashboard", "Angular", "Portfolio overview, quick actions, recent transactions")
    Component(portfolio_module, "Portfolio Module", "Angular", "Portfolio page, asset allocation")
    Component(market_module, "Market Module", "Angular", "Market trends, watch list, stock chart")
    Component(risk_module, "Risk Module", "Angular", "Risk analysis component")
    Component(transaction_module, "Transaction Module", "Angular", "Transaction records and history")

    Component(ui_lib, "@fintech/ui", "TypeScript", "Avatar, Badge, Button, Card, Input, Progress")
    Component(utils_lib, "@fintech/utils", "TypeScript", "Shared utilities")
    Component(charts, "Chart Libraries", "Chart.js / ng2-charts", "Performance chart, financial charts, ag-grid")
}

Container_Ext(portfolio_api, "Portfolio Analytics API", "REST", "Backend services")
Container_Ext(market_api, "Market Data API", "REST", "Third-party market data")

Rel(app_router, dashboard, "Routes to", "")
Rel(app_router, portfolio_module, "Routes to", "")
Rel(app_router, market_module, "Routes to", "")
Rel(app_router, risk_module, "Routes to", "")
Rel(app_router, transaction_module, "Routes to", "")
Rel(dashboard, portfolio_module, "Links", "")
Rel(dashboard, risk_module, "Uses", "")
Rel(dashboard, transaction_module, "Uses", "")
Rel(portfolio_module, ui_lib, "Uses", "Workspace")
Rel(portfolio_module, utils_lib, "Uses", "Workspace")
Rel(portfolio_module, charts, "Uses", "")
Rel(market_module, ui_lib, "Uses", "")
Rel(market_module, charts, "Uses", "")
Rel(risk_module, charts, "Uses", "")
Rel(portfolio_module, portfolio_api, "HTTP", "REST")
Rel(market_module, portfolio_api, "HTTP", "REST")
Rel(market_module, market_api, "HTTP", "REST")

@enduml
